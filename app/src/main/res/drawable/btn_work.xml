<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/btn_work">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 按钮可用，并且处于按下状态时显示这个状态 -->
            <item
                android:drawable="@mipmap/b_zuoye_xuan"
                android:state_checked="true" />
            <item
                android:drawable="@mipmap/b_zuoye_xuan"
                android:state_pressed="true" />
            <!-- 按钮可用，并且处于正常状态时显示这个状态 -->
            <item android:drawable="@mipmap/b_zuoye_weixuan" />
        </selector>
    </item>

    <item android:id="@+id/red_point">
        <bitmap
            android:width="28px"
            android:height="28px"
            android:gravity="right|bottom"
            android:src="@drawable/ic_unread" />
    </item>

</layer-list>