<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/remind_custom_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/startImageView1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />

        <ImageView
            android:id="@+id/startImageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />

        <ImageView
            android:id="@+id/startImageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="414px"
        android:layout_height="347px"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="227px"
        android:layout_marginTop="21px">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65px"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#FF272E32"
            android:ellipsize="end"
            android:textSize="32px" />

        <TextView
            android:id="@+id/dayText"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="181px"
            android:gravity="center"
            android:text="第                   天  共21天"
            android:textColor="#FF898F92"
            android:textSize="32px" />

        <TextView
            android:id="@+id/numDayText"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95px"
            android:layout_marginTop="100px"
            android:gravity="center"
            android:textColor="#FF38B6FF"
            android:textSize="110px" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="37px"
            android:layout_marginTop="251px"
            android:gravity="center"
            android:textColor="#FF272E32"
            android:textSize="26px" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|top"
        android:layout_marginRight="12px"
        android:layout_marginTop="13px"
        android:background="@drawable/btn_close"/>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="17dp"
        android:background="@mipmap/wakeup_sign"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:text="打卡"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

</RelativeLayout>