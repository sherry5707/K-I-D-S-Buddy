<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".activity.SleepActivity">

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/sleep_bg" />

    <ImageView
        android:id="@+id/moonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="212dp"
        android:layout_marginLeft="371dp"
        android:scaleType="center"
        android:src="@mipmap/sleep_moon_sleep" />

    <ImageView
        android:id="@+id/butterflyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="166dp"
        android:scaleType="fitXY"
        android:src="@mipmap/sleep_butterfly"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/tentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="58dp"
        android:scaleType="fitXY"
        android:src="@mipmap/sleep_tent"
        android:visibility="invisible" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="70dp"
        android:scaleType="fitXY"
        android:src="@mipmap/sleep_frog" />


    <AdapterViewFlipper
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="137dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/storyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="159dp"
        android:scaleType="fitXY"
        android:src="@mipmap/sleep_xiaowei_talk6"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/startImageView1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />

        <ImageView
            android:id="@+id/startImageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />

        <ImageView
            android:id="@+id/startImageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wakeup_star" />
    </LinearLayout>

    <TextView
        android:id="@+id/signTextView"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/sleep_sign_selector"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:textColor="#FFF"
        android:textSize="24dp" />


    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <Button
        android:id="@+id/signButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:onClick="signButtonClick" />

    <com.kinstalk.her.qchat.progressbar.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="#FFD100"
        CircleProgressView:cpv_barWidth="37dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="60"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="#28FFFFFF"
        CircleProgressView:cpv_rimWidth="37dp"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="#FFD100"
        CircleProgressView:cpv_text="打卡"
        CircleProgressView:cpv_textColor="#FFFFFF"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_textSize="12dp"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitColor="#0000"
        CircleProgressView:cpv_value="0" />

    <ImageView
        android:id="@+id/sleep_timer"
        android:layout_width="385px"
        android:layout_height="480px"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@drawable/sleep_timer_animation"/>

    <ImageView
        android:id="@+id/sleep_timer_sign_btn"
        android:layout_width="216px"
        android:layout_height="83px"
        android:layout_marginTop="237dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sleep_timer_btn_animation"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/signTimeoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/sign_timeout"
        android:text="@string/sign_timeout_text"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/joinSleepImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/sleep_join_sleep_mode"
        android:background="#E6000000"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/signTimeoutImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/sign_timeout1"
        android:visibility="invisible" />

</RelativeLayout>