<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/no_receive_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:text="@string/no_receive_gift"
        android:textColor="#749CBF"
        android:textSize="30px"
        android:visibility="gone" />

    <ListView
        android:id="@+id/receive_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="17px"
        android:listSelector="#00000000"
        android:scrollbarThumbVertical="@drawable/scrollbar_ver_thumb"
        android:overScrollMode="never" />
</RelativeLayout>