<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/remind_item_root"
    android:layout_width="280px"
    android:layout_marginRight="13px"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0px"
    app:bga_sil_bottomMode="pullOut"
    app:bga_sil_swipeDirection="left">

    <RelativeLayout
        android:id="@+id/remind_item"
        android:layout_width="280px"
        android:layout_height="392px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/remind_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0px"/>


        <LinearLayout
            android:id="@+id/remind_item_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152px"
            android:layout_marginLeft="71px"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remind_item_star_1"
                android:layout_width="46px"
                android:layout_height="46px"
                android:background="@drawable/star_unposted" />

            <ImageView
                android:id="@+id/remind_item_star_2"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_marginLeft="1px"
                android:background="@drawable/star_unposted" />

            <ImageView
                android:id="@+id/remind_item_star_3"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_marginLeft="1px"
                android:background="@drawable/star_unposted" />
        </LinearLayout>

        <TextView
            android:id="@+id/remind_item_content"
            android:layout_width="208px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="222px"
            android:maxEms="9"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFFFF"
            android:textSize="26px" />

        <TextView
            android:id="@+id/remind_item_content_line1"
            android:layout_width="208px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="206px"
            android:lineSpacingExtra="7px"
            android:maxEms="9"
            android:maxLines="2"
            android:textColor="#FFFFFFFF"
            android:text="起床"
            android:textSize="26px"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/remind_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="52px"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="11:11"
            android:textColor="#FFFFFFFF"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/remind_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5px"
            android:src="@drawable/remind_dot"
            />

    </RelativeLayout>

</FrameLayout>
