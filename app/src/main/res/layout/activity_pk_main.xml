<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_pk">

    <!--题目内容-->
    <RelativeLayout
        android:layout_width="656px"
        android:layout_height="238px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="51px"
        android:background="@drawable/bg_pk_content">

        <ImageView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="夜来风雨声的下一句是什么？"
            android:textColor="#FFFFFF"
            android:textSize="34px" />
    </RelativeLayout>

    <!--左边三张道具卡-->
    <ImageView
        android:id="@+id/card_one"
        android:layout_width="76px"
        android:layout_height="76px"
        android:layout_marginLeft="18px"
        android:layout_marginTop="152px"
        android:src="@drawable/prop_card" />

    <ImageView
        android:id="@+id/card_two"
        android:layout_width="76px"
        android:layout_height="76px"
        android:layout_marginLeft="18px"
        android:layout_marginTop="262px"
        android:src="@drawable/prop_card" />

    <ImageView
        android:id="@+id/card_three"
        android:layout_width="76px"
        android:layout_height="76px"
        android:layout_marginLeft="18px"
        android:layout_marginTop="372px"
        android:src="@drawable/prop_card" />

    <!--道具卡上面的数字-->
    <TextView
        android:id="@+id/card_num_one"
        android:layout_width="35px"
        android:layout_height="36px"
        android:layout_marginLeft="67px"
        android:layout_marginTop="140px"
        android:background="@drawable/pk_card_num_bg"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28px" />

    <TextView
        android:id="@+id/card_num_two"
        android:layout_width="35px"
        android:layout_height="36px"
        android:layout_marginLeft="67px"
        android:layout_marginTop="252px"
        android:background="@drawable/pk_card_num_bg"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28px" />

    <TextView
        android:id="@+id/card_num_three"
        android:layout_width="35px"
        android:layout_height="36px"
        android:layout_marginLeft="67px"
        android:layout_marginTop="362px"
        android:background="@drawable/pk_card_num_bg"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28px" />

    <!--底部三个答案-->
    <RelativeLayout
        android:layout_width="216px"
        android:layout_height="168px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="114px"
        android:background="@drawable/pk_answer_bg">

        <ImageView
            android:id="@+id/answer_img_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/answer_text_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#2C2C2C"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/answer_false_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/answer_true_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="216px"
        android:layout_height="168px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="334px"
        android:background="@drawable/pk_answer_bg">

        <ImageView
            android:id="@+id/answer_img_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/answer_text_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#2C2C2C"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/answer_false_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/answer_true_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="216px"
        android:layout_height="168px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="554px"
        android:background="@drawable/pk_answer_bg">

        <ImageView
            android:id="@+id/answer_img_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/answer_text_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#2C2C2C"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/answer_false_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/answer_true_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pk_answer_true"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="411px"
        android:layout_height="24px"
        android:layout_marginLeft="122px"
        android:layout_marginTop="9px"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/pk_progress_list" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11px"
        android:layout_marginTop="2px"
        android:layout_toRightOf="@+id/progressBar"
        android:textColor="#FFFFFF"
        android:textSize="26px" />

    <!--头像-->
    <ImageView
        android:layout_width="138px"
        android:layout_height="124px"
        android:layout_marginLeft="4px"
        android:layout_marginTop="4px"
        android:src="@drawable/pk_main_avatar" />

    <ImageView
        android:id="@+id/pk_main_avatar"
        android:layout_width="108px"
        android:layout_height="94px"
        android:layout_marginLeft="19px"
        android:layout_marginTop="19px"
        android:src="@drawable/avatar_pk_default" />

    <!--剩余人数-->
    <RelativeLayout
        android:layout_width="187px"
        android:layout_height="109px"
        android:layout_alignParentRight="true"
        android:background="@drawable/last_num_img">

        <TextView
            android:id="@+id/last_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="5px"
            android:text="剩余人数"
            android:textColor="#FFFFFF"
            android:textSize="22px" />

        <TextView
            android:id="@+id/last_num"
            android:layout_width="70px"
            android:layout_height="81px"
            android:layout_marginLeft="79px"
            android:layout_marginTop="21px"
            android:gravity="center"
            android:text="24"
            android:textColor="#FFFFFF"
            android:textSize="58px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/diaoxue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pk_diaoxue" />

</RelativeLayout>