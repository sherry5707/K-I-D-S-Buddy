<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/privacy_warning_layout"
    android:layout_width="match_parent"
    android:layout_height="98px"
    android:background="@color/network_disconnect_warnning_bg"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/remove_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52px"
        android:layout_marginRight="23px"
        android:src="@drawable/privacy_mode_dlg_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_warnning"
        android:textColor="@color/white"
        android:textSize="30px" />
</LinearLayout>